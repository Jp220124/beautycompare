# BeautyCompare Backend Environment Variables
# Copy to .env and fill in values

# Debug mode (set to false in production)
DEBUG=false

# Database URL
# Local SQLite (default):
# DATABASE_URL=sqlite+aiosqlite:///./beautycompare.db
# Supabase PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://postgres.xxxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# CORS allowed origins (comma-separated in env, or set as JSON list)
# For production, set to your Cloudflare Pages URL:
# ALLOWED_ORIGINS=["https://beautycompare.pages.dev","http://localhost:3000"]

# Amazon PA-API (optional, improves Amazon results)
# AMAZON_ACCESS_KEY=
# AMAZON_SECRET_KEY=
# AMAZON_PARTNER_TAG=
